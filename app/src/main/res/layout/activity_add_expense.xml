<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".AddExpenseActivity"
    android:background="@color/white">

    <TextView
        android:id="@+id/addExpenseHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/bungee_shade"
        android:text="@string/add_expenses"
        android:textColor="@color/darkblue"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/addExpenseHeading"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="6dp"
        android:src="@drawable/checked__1_" />

    <EditText
        android:id="@+id/amount"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="@string/enter_the_amount"
        android:padding="12dp"
        android:textSize="20sp"
        android:fontFamily="@font/cuprum"
        android:layout_below="@id/addExpenseHeading"
        android:background="@drawable/border"
        android:layout_marginTop="16dp"
        android:maxLines="1"/>

    <EditText
        android:id="@+id/dateEditText"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/addExpenseHeading"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="101dp"
        android:background="@drawable/border"
        android:fontFamily="@font/cuprum"
        android:hint="DDMMYYYY"
        android:inputType="number"
        android:maxEms="10"
        android:maxLines="1"
        android:padding="12dp"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/contentEditText"
        android:layout_width="395dp"
        android:layout_height="594dp"
        android:layout_below="@id/amount"
        android:layout_marginTop="113dp"
        android:background="@drawable/border"
        android:fontFamily="@font/cuprum"
        android:gravity="top"
        android:hint="@string/enter_the_description"
        android:padding="22dp"
        android:textSize="18sp" />


</RelativeLayout>